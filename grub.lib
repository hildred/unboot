function start_ser {
	if ! insmod serial; then
		echo serial load failed
		set serr=4
	elif ! serial --unit=0 --speed=115200;then
		echo serial conf err
		set serr=3
	elif ! terminal_output --append serial; then
		echo output error
		set serr=2
	elif ! terminal_input --append serial; then
		echo input set err
		set serr=1
	else
		echo mark 1
		set serr=0
	fi
}

function savedefault {
	if [ -z "${boot_once}" ]; then
		saved_entry="${chosen}"
		save_env saved_entry
	fi
}

if cpuid -l ; then
	set arch=amd64
else
	set arch=i386
fi
export arch

function gfxmode {
	set gfxpayload="${1}"
}
set linux_gfx_mode=
export linux_gfx_mode

